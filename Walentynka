<script>
  const btnNo = document.getElementById("no");
  const btnYes = document.getElementById("yes");
  const card = document.getElementById("card");
  let yesScale = 1, tries = 0;

  function moveNo(){
    tries++;
    const maxX = 250;
    const maxY = 70;
    btnNo.style.left = Math.random()*maxX + "px";
    btnNo.style.top  = Math.random()*maxY + "px";

    yesScale = Math.min(1.6, yesScale + 0.08);
    btnYes.style.transform = `scale(${yesScale})`;

    const texts = ["Na pewno? ðŸ¤”","ProszÄ™â€¦ ðŸ¥º","No weÅºâ€¦ ðŸ˜˜","PomyÅ›l jeszcze ðŸ’—","Serio? ðŸ˜‡"];
    btnNo.textContent = texts[Math.min(4, Math.floor(tries/2))];
  }

  btnNo.addEventListener("mouseover", moveNo);
  btnNo.addEventListener("click", moveNo);

  btnYes.addEventListener("click", ()=>{
    celebrate();
    card.innerHTML = `
      https://media.tenor.com/NT5uWZLxE3QAAAAM/peach-goma.gif
      <h1>WiedziaÅ‚em! ðŸ’–</h1>
      <p>14 lutego jest nasz âœ¨</p>
    `;
  });

  const canvas = document.getElementById("confetti");
  const ctx = canvas.getContext("2d");
  let W, H, pieces = [];
  function fit(){ W = canvas.width = innerWidth; H = canvas.height = innerHeight; }
  fit(); addEventListener("resize", fit);

  function spawn(n=200){
    const colors=["#ff69b4","#ffaad7","#ffd1e6","#fff","#d94f92"];
    for(let i=0;i<n;i++){
      pieces.push({
        x:Math.random()*W, y:Math.random()*H - H,
        w:6+Math.random()*6, h:6+Math.random()*6,
        color:colors[(Math.random()*colors.length)|0],
        vx:-2+Math.random()*4, vy:2+Math.random()*4,
        rot:Math.random()*Math.PI, vr:-0.2+Math.random()*0.4
      });
    }
  }

  function draw(){
    ctx.clearRect(0,0,W,H);
    pieces.forEach(p=>{
      p.x+=p.vx; p.y+=p.vy; p.rot+=p.vr;
      if(p.y>H) p.y=-10;
      if(p.x>W) p.x=-10;
      if(p.x<-10) p.x=W+10;

      ctx.save();
      ctx.translate(p.x,p.y);
      ctx.rotate(p.rot);
      ctx.fillStyle=p.color;
      ctx.fillRect(-p.w/2,-p.h/2,p.w,p.h);
      ctx.restore();
    });
    requestAnimationFrame(draw);
  }

  function celebrate(){
    spawn(250);
    draw();
  }
</script>

